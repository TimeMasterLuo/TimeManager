<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.friendlist.AddFriendProfile">

    <ScrollView
        android:id="@+id/scollview_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/background1"
                tools:srcCompat="@drawable/background1" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                app:rowCount="3">

                <com.example.timemanager.components.CircleImageView
                    android:id="@+id/friendAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/avatar2" />

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:visibility="visible"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="4">

                </LinearLayout>

                <TextView
                    android:id="@+id/friendName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="username"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_column="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/friendLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/roundtext"
                    android:fadingEdge="horizontal|vertical"
                    android:text="资深用户"
                    android:textColor="#FFFFFF"
                    app:layout_column="1"
                    app:layout_row="0" />

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <Button
                    android:id="@+id/friendGender"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_wc_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawingCacheQuality="auto"
                    android:paddingLeft="20dp"
                    android:text="性别：男"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    app:layout_column="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/friendIntro"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_edit_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawingCacheQuality="auto"
                    android:paddingLeft="20dp"
                    android:text="这个人很懒，什么也没留下。"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    app:layout_column="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/friend_register_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawingCacheQuality="auto"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="注册时间:   2020-10-10"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_column="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/itemdata_button"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_assessment_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawingCacheQuality="auto"
                    android:paddingLeft="20dp"
                    android:text="完成任务总数：21 |  累计专注时间：100 min"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    app:layout_column="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/achievement_button"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_show_chart_24"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:drawingCacheQuality="auto"
                    android:paddingLeft="20dp"
                    android:text="成就展示"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    app:layout_column="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_row="4" />

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addFriendButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="加好友"
        android:textColor="@color/RGB_FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>