<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_all" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_alarm" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_awayphone" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_friendalarm" />
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="581dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/analyze_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="350dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_assessment_24"
        android:textAlignment="center"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="602dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rowCount="3">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/dashboard_alarm"
                        android:scaleType="fitCenter"
                        android:src="@drawable/new_clock" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:visibility="visible"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="4"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="10月10日9：30 am"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/config_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:text="查看详情 >"
                        android:textColor="#80808080"
                        app:layout_rowWeight="4" />
                </androidx.gridlayout.widget.GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rowCount="3">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/dashboard_alarm"
                        android:scaleType="fitCenter"
                        android:src="@drawable/new_clock" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:visibility="visible"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="4"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="10月10日9：30 am"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button2"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:text="查看详情 >"
                        android:textColor="#80808080"
                        app:layout_rowWeight="4" />

                </androidx.gridlayout.widget.GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/friend"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rowCount="3">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:contentDescription="@string/dashboard_alarm"
                        android:scaleType="fitCenter"
                        android:src="@drawable/friend_clock" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:visibility="visible"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="4"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="10月10日9：30 am"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button3"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:text="查看详情 >"
                        android:textColor="#80808080"
                        app:layout_rowWeight="4" />
                </androidx.gridlayout.widget.GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/away"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rowCount="3">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:src="@drawable/hourglass" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:visibility="visible"
                        app:layout_gravity="fill"
                        app:layout_rowWeight="4"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="10月10日"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="9:30 am-10:00 am"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button4"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:text="查看详情 >"
                        android:textColor="#80808080"
                        app:layout_column="2"
                        app:layout_row="0"
                        app:layout_rowWeight="4" />
                </androidx.gridlayout.widget.GridLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>